/* miniprogram/components/contentBox/contentBox.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
.contentBox{
  /* display: flex; */
  /* background-color: rgba(255, 255, 255, 0.8); */
  box-sizing: border-box;
  position: relative;
  align-items: center;
  box-shadow: 1px 1px 10px rgb(200, 200, 200);

}

.firstFloor{
  position: relative;
  height: 100rpx;
  
}

.title {
  position: absolute;
  font-size: 40rpx;
  font-weight: 500;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}
.money{
  top: 50%;
  transform: translateY(-50%);
  position: absolute;
  right: 30rpx;
  font-size: 17px;
  color: #5FEED9;
}


.tags {
  margin-top: 30rpx;
  width: 80%;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
}

.thirdFloor{
  
}


.selfInf{
  position: absolute;
  left: 0;
  bottom: 10rpx;

}

.selfInf > image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}


.selfInf > text{
  vertical-align: middle;
}

.where{
  position: absolute;
  right: 30rpx;
  bottom: 0;
  color: #C3BEC4;
}


.finishStatus{
  margin-left: 600rpx;
  font-size: 40rpx;
}
